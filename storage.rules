
rules_version = '2';

// V2 of storage rules uses `service firebase.storage`
service firebase.storage {
  // `match /b/{bucket}/o` is a required boilerplate.
  match /b/{bucket}/o {
    // This rule allows any authenticated user to read any file.
    // This is not a good idea, but it's a good starting point.
    match /{allPaths=**} {
      allow read: if true;
    }

    // This rule allows an authenticated user to write to their own user directory.
    match /profile-photos/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /portfolio-media/{userId}/{fileName} {
        allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /request-media/{userId}/{fileName} {
        allow write: if request.auth != null;
    }
    match /content-deliveries/{requestId}/{fileName} {
        allow write: if request.auth != null;
    }

     // Allow authenticated users to upload report media
    match /report-media/{reporterId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == reporterId;
    }

    // Allow authenticated users to upload chat media
    match /chat-media/{chatRoomId}/{fileName} {
      allow write: if request.auth != null;
    }
  }
}
