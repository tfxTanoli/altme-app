{
    "rules": {
        "users": {
            ".read": true,
            "$userId": {
                ".write": "$userId === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'admin'"
            }
        },
        "photographerProfiles": {
            ".read": true,
            ".indexOn": [
                "isAcceptingRequests"
            ],
            "$photographerId": {
                ".write": "$photographerId === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'admin'"
            }
        },
        "notifications": {
            "$userId": {
                ".indexOn": [
                    "timestamp"
                ],
                ".read": "$userId === auth.uid",
                "$notificationId": {
                    ".write": "auth != null"
                }
            }
        }
    }
}